{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "./lib",
    "rootDir": "./src",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./types",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": true,
    "experimentalDecorators": true
  },
  "typeAcquisition": {
    "enable": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}